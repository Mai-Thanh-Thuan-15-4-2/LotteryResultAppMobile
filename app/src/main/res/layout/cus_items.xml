<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@mipmap/bgltr"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/id_vs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/transparent"/>
    <TextView
        android:id="@+id/value_tentinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_toRightOf="@id/id_vs"
        android:text="Thông tin đặt hàng"
        android:textColor="@color/blue_500"
        android:textSize="30dp" />
    <TextView
        android:id="@+id/value_ngayxolb"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/id_vs"
        android:text="Họ tên: "
        android:textColor="@color/blue_grey_700"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/value_hoten"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/id_vs"
        android:textColor="@color/blue_grey_700"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/value_soluonglb"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:layout_marginTop="83dp"
        android:layout_toRightOf="@id/id_vs"
        android:text="Điện thoại: "
        android:textColor="@color/blue_grey_700"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/value_sdt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="75dp"
        android:layout_toRightOf="@id/id_vs"
        android:textColor="@color/blue_grey_700"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:layout_marginTop="120dp"
        android:layout_toRightOf="@id/id_vs"
        android:text="Địa chỉ: "
        android:textColor="@color/blue_grey_700"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/value_dc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="110dp"
        android:layout_toRightOf="@id/id_vs"
        android:textColor="@color/blue_grey_700"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:layout_marginTop="160dp"
        android:layout_toRightOf="@id/id_vs"
        android:text="Số lượng: "
        android:textColor="@color/blue_grey_700"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/value_slm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="150dp"
        android:layout_toRightOf="@id/id_vs"
        android:textColor="@color/blue_grey_700"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:layout_marginTop="200dp"
        android:layout_toRightOf="@id/id_vs"
        android:text="Số chọn: "
        android:textColor="@color/blue_grey_700"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/value_sm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="190dp"
        android:layout_toRightOf="@id/id_vs"
        android:textColor="@color/blue_grey_700"
        android:textSize="20dp" />
    <Button
        android:id="@+id/button_tt"
        android:text="Đặt mua"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/bg_spinner"
        android:foreground="@drawable/image_main_foreground" />
</RelativeLayout>

