<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bgltr">

        <LinearLayout
            android:id="@+id/quaythu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="300dp"
            android:theme="@style/WhiteTextTheme">

            <Button
                android:id="@+id/quaythumn"
                android:layout_height="wrap_content"
                android:text="Quay Thử Miền Nam"
                android:layout_marginTop="8dp"
                android:layout_width= "200dp"
                android:textSize="13dp"
                android:layout_gravity="center"
                android:foreground="@drawable/image_main_foreground"
                android:background="@drawable/button_bg"
                />

            <Button
                android:id="@+id/quaythumb"
                android:layout_marginTop="8dp"
                android:layout_width= "200dp"
                android:textSize="13dp"
                android:layout_gravity="center"
                android:foreground="@drawable/image_main_foreground"
                android:background="@drawable/button_bg"
                android:layout_height="wrap_content"
                android:text="Quay Số Miền Bắc" />
        </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/listqtBackHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@mipmap/iconhome"
        app:layout_anchor="@id/quaythu"
        app:layout_anchorGravity="bottom|right|end"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
