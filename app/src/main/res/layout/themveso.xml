<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@mipmap/bgltr"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/id_vs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/transparent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_toRightOf="@id/id_vs"
        android:text="Thêm vé số"
        android:textColor="@color/blue_500"
        android:textSize="30dp" />
    <TextView
        android:id="@+id/value_ngayxolb"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/id_vs"
        android:text="Tên tỉnh: "
        android:textColor="@color/blue_grey_700"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/value_tentinh"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/id_vs"
        android:textColor="@color/blue_grey_700"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:layout_marginTop="83dp"
        android:layout_toRightOf="@id/id_vs"
        android:text="Dãy số: "
        android:textColor="@color/blue_grey_700"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/value_dayso"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="75dp"
        android:layout_toRightOf="@id/id_vs"
        android:textColor="@color/blue_grey_700"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:layout_marginTop="120dp"
        android:layout_toRightOf="@id/id_vs"
        android:text="Ngày xổ: "
        android:textColor="@color/blue_grey_700"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/value_ngayxo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="110dp"
        android:layout_toRightOf="@id/id_vs"
        android:textColor="@color/blue_grey_700"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:layout_marginTop="160dp"
        android:layout_toRightOf="@id/id_vs"
        android:text="Số lượng: "
        android:textColor="@color/blue_grey_700"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/value_slm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="150dp"
        android:layout_toRightOf="@id/id_vs"
        android:textColor="@color/blue_grey_700"
        android:textSize="20dp" />
    <Button
        android:id="@+id/button_tt"
        android:text="Thêm"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/bg_spinner"
        android:foreground="@drawable/image_main_foreground" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/themvsBackHome"
        android:layout_width="wrap_content"
        android:layout_marginTop="-5dp"
        android:layout_height="wrap_content"
        android:src="?attr/actionModeCloseDrawable"
        app:layout_anchorGravity="bottom|right|end"/>
</RelativeLayout>

